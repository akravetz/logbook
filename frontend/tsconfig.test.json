{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@types/jest", "@jest/globals", "node"],
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "lib/test-utils.ts",
    "lib/test-factories.ts",
    "jest.setup.ts",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
